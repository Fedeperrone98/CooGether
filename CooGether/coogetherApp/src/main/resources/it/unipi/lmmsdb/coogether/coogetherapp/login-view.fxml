                    <Font size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets left="10.0" top="1.0"/>
                </HBox.margin>
                <padding>
                    <Insets top="2.0"/>
                </padding>
            </Label>
            <Button fx:id="signUp" layoutX="358.0" layoutY="256.0" mnemonicParsing="false" onAction="#signUp"
                    text="Sign Up" textAlignment="CENTER" textFill="#596cc2">

            <Image url="@img/back.png"/>
        </ImageView>
    </HBox>
    <VBox AnchorPane.topAnchor="120" AnchorPane.leftAnchor="300" prefWidth="600.0" alignment="TOP_CENTER">

        <HBox spacing="10.0" alignment="CENTER">
            <Label layoutX="172.0" layoutY="54.0" text="Email:">
                <font>
                    <Font size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Label>
            <TextField fx:id="email" layoutX="300.0" layoutY="55.0" prefHeight="25.0" prefWidth="115.0">
